{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "noEmitOnError": true,
    "removeComments": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "declaration": false,
    "jsx": "react",
    "outDir": ".micra",
    "baseUrl": ".",
    "paths": {
      "app/*": ["src/app/*"],
      "domains/*": ["src/domains/*"],
      "helpers/*": ["src/helpers/*"],
      "testing/*": ["src/helpers/testing/*"],
      "resolvers/*": ["src/resolvers/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", ".config/test/testing.register.d.ts"],
  "exclude": ["node_modules"]
}
