{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "noEmitOnError": true,
    "removeComments": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "declaration": false,
    "jsx": "react",
    "outDir": ".micra",
    "baseUrl": "src",
    "paths": {
      "app/*": ["app/*"],
      "config": ["config.ts"],
      "domains/*": ["domains/*"],
      "helpers/*": ["helpers/*"],
      "resolvers/*": ["resolvers/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", ".config/test/testing.register.d.ts"]
}
